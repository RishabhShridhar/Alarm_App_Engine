<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.example.android.com.alarm.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/background_light">


    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:headerBackground="@android:color/holo_purple"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numbersSelectorColor="@android:color/holo_purple"
        tools:targetApi="lollipop" />

    <Button
        android:id ="@+id/alarm_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_on"
        android:background="@drawable/corner"
        android:padding="15dp"
        android:onClick="send_notification"
        android:textSize="14sp"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true" />

    <Button
        android:id ="@+id/alarm_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_off"
        android:background="@drawable/corner"
        android:padding="15dp"
        android:layout_below="@+id/alarm_on"
        android:layout_alignLeft="@+id/alarm_on"
        android:layout_alignStart="@+id/alarm_on" />

    <Spinner
        android:id="@+id/addspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray"
        android:spinnerMode="dialog"
        android:text="@string/select_ringtone"
        android:visibility="visible"
        android:entries="@array/addspinner"/>





</RelativeLayout>
